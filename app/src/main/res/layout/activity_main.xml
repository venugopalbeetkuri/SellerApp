<?xml version="1.0" encoding="utf-8"?>



<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent" tools:context="com.bizzmark.sellerapp.MainActivity">

<TableRow android:gravity="center" android:layout_span="2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Earn"
        android:id="@+id/buttonEarn"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:id="@+id/buttonRedeem"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="22dp" />
</TableRow>


</TableLayout>
